{
	"name": "backend",
	"version": "1.0.0",
	"main": "src/server.ts",
	"type": "module",
	"scripts": {
		"start": "tsx --loader esm-module-alias/loader src/server.ts",
		"start:test": "cross-env NODE_ENV=production tsx --env-file=.env src/server.ts",
		"dev": "tsx --env-file=.env --watch src/server.ts --clear-screen=false",
		"format": "prettier --write .",
		"lint": "eslint src/**/*.ts",
		"check-types": "tsc --incremental --pretty p tsconfig.json "
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"aliases": {
		"@": "src"
	},
	"dependencies": {
		"@colors/colors": "^1.6.0",
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"date-fns": "^4.1.0",
		"esm-module-alias": "^2.2.1",
		"express": "^4.21.0",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.6.3",
		"morgan": "^1.10.0",
		"tsx": "^4.19.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/hpp": "^0.2.6",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.5.5",
		"@zayne-labs/tsconfig": "^0.1.1",
		"typescript": "^5.6.2"
	}
}