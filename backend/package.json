{
	"name": "backend",
	"type": "module",
	"version": "1.0.0",
	"main": "src/server.ts",
	"aliases": {
		"@": "src"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"check-types": "tsc --incremental --pretty p tsconfig.json ",
		"dev": "tsx --env-file=.env src/server.ts --clear-screen=false",
		"dev:watch": "tsx --env-file=.env --watch src/server.ts --clear-screen=false",
		"format": "prettier --write .",
		"lint": "eslint src/**/*.ts",
		"start": "tsx src/server.ts",
		"start:test": "cross-env NODE_ENV=production tsx --env-file=.env ./src/server.ts"
	},
	"dependencies": {
		"@colors/colors": "^1.6.0",
		"@zayne-labs/toolkit": "^0.8.45",
		"@zayne-labs/tsconfig": "^0.2.1",
		"bcryptjs": "^3.0.2",
		"consola": "^3.4.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"date-fns": "^4.1.0",
		"express": "5.0.1",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.0.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.12.1",
		"morgan": "^1.10.0",
		"nodemailer": "^6.10.0",
		"tsx": "^4.19.3",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/hpp": "^0.2.6",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.13.10",
		"@types/nodemailer": "^6.4.17",
		"@zayne-labs/eslint-config": "^0.6.1",
		"typescript": "^5.8.2"
	}
}
